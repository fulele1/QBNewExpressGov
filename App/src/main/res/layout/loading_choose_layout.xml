<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wirte"
    >

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="@dimen/title"
        android:text="请选择地图"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="@dimen/activity_horizontal_margina"
        />

    <TextView
        android:id="@+id/gaode_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="高德地图"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="@dimen/activity_horizontal_margina"
        android:textSize="@dimen/text"
        />
    <LinearLayout
        style="@style/horizontal_black_line_small"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        ></LinearLayout>

    <TextView
        android:id="@+id/baidu_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="百度地图"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="@dimen/activity_horizontal_margina"
        android:textSize="@dimen/text"
        />
</LinearLayout>