<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wirte"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/wirte"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_padding"
                android:layout_weight="1"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_name_lp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任亚军"
                        android:textColor="@color/black"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@mipmap/man"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:id="@+id/txt_tel_lp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="43543543"
                        android:gravity="right"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_com_lp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顺丰控股(集团)股份有限公司"
                    android:layout_below="@+id/txt_name_three"
                    android:layout_marginTop="@dimen/activity_horizontal_margins"
                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/horizontal_black_line_small"
            android:layout_below="@+id/txt_name_pq"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/identify"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/txt_ide_lp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="123456878454864545"
                android:layout_marginLeft="@dimen/layout_padding_small"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>