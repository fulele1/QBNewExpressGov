<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/log_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_padding_small"
    android:paddingRight="@dimen/layout_padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding_small"
        android:paddingRight="@dimen/layout_padding_small">

        <TextView
            android:id="@+id/txt_com_llog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/line_large"
            android:drawableLeft="@mipmap/bill"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:text="快递单号"
            android:textColor="@color/main_gray" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_large"
            android:src="@mipmap/fengefu" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_com_lcllog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name_three"
                android:layout_weight="1"
                android:text="管辖机构"
                android:textSize="@dimen/edit_text" />

            <TextView
                android:id="@+id/txt_org_lcllog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三丰/2天前"
                android:textSize="@dimen/edit_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding_small"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name_three"
                android:layout_weight="1"
                android:text="检查日期"
                android:textSize="@dimen/edit_text" />

            <TextView
                android:id="@+id/txt_date_listlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三丰/2天前"
                android:textSize="@dimen/edit_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding_small"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name_three"
                android:layout_weight="1"
                android:text="检查地址"
                android:textSize="@dimen/edit_text" />

            <TextView
                android:id="@+id/txt_add_listlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三丰/2天前"
                android:textSize="@dimen/edit_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>