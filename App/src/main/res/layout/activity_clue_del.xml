<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_com_detial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <include layout="@layout/title_bar_child" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/wirte"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/wirte"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="运单号:    " />

            <TextView
                android:id="@+id/txt_responsible_Per_cld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="" />

            <LinearLayout
                style="@style/horizontal_black_line_small"
                android:layout_below="@+id/txt_responsible_Per_cld"
                android:layout_marginTop="@dimen/line_large" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="上报人:    " />

            <TextView
                android:id="@+id/txt__Per_cld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="" />

            <LinearLayout
                style="@style/horizontal_black_line_small"
                android:layout_below="@+id/txt__Per_cld"
                android:layout_marginTop="@dimen/line_large" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="企业名称:    " />

            <TextView
                android:id="@+id/txt_responsible_tel_cld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/main" />

            <LinearLayout
                style="@style/horizontal_black_line_small"
                android:layout_below="@+id/txt_responsible_tel_cld"
                android:layout_marginTop="@dimen/line_large" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="时间:    " />

            <TextView
                android:id="@+id/txt_employee_count_cld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="" />

            <LinearLayout
                style="@style/horizontal_black_line_small"
                android:layout_below="@+id/txt_employee_count_cld"
                android:layout_marginTop="@dimen/line_large" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="地址:    " />

            <TextView
                android:id="@+id/txt_get_count_cld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            style="@style/horizontal_black_line_small"
            android:layout_marginTop="@dimen/line_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="线索信息:    " />

            <TextView
                android:id="@+id/txt_post_count_cld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                 />
        </LinearLayout>

        <LinearLayout
            style="@style/horizontal_black_line_small"
            android:layout_marginTop="@dimen/line_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="图片:    " />

            <ImageView
                android:id="@+id/img_pic_cdel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
